{
  "name": "korean-enterprise-commerce",
  "version": "1.0.0",
  "description": "동시접속 1만명 지원 한국형 엔터프라이즈 커머스 플랫폼",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "dev:next": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "start:next": "next start",
    "stop": "pkill -f 'next start' || lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "restart": "npm run stop && npm start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "db:schema": "psql -h localhost -p 5432 -U admin -d commerce_plugin -f sql/schema.sql",
    "db:seed": "psql -h localhost -p 5432 -U admin -d commerce_plugin -f sql/seed.sql",
    "seed:products": "tsx scripts/seed-products.ts",
    "db:migrate": "psql -h localhost -p 5432 -U admin -d commerce_plugin -f sql/migrations/",
    "db:init": "sh scripts/init-db.sh",
    "cache:generate": "tsx scripts/generate-json-cache.ts",
    "cache:status": "curl http://localhost:3000/api/admin/regenerate-cache",
    "cache:clear": "rm -rf public/cache/products/*.json",
    "cache:regenerate": "npm run cache:clear && npm run cache:generate",
    "cache:cron": "tsx scripts/cache-regeneration-cron.ts",
    "migrate:images": "tsx scripts/migrate-images.ts",
    "update:database-urls": "tsx scripts/update-database-urls.ts",
    "ui:generate": "tsx scripts/generate-ui-sections.ts",
    "cache:cron:dev": "NODE_ENV=development tsx scripts/cache-regeneration-cron.ts",
    "podman:setup": "sh scripts/setup-podman.sh",
    "test:server": "tsx scripts/test-server-connection.ts",
    "test:drizzle": "tsx scripts/test-drizzle-connection.ts",
    "sync:schema": "tsx scripts/sync-schema-to-server.ts",
    "migrate:server": "tsx scripts/migrate-to-server.ts",
    "build:check": "next build --debug",
    "build:analyze": "ANALYZE=true next build",
    "vercel:test": "vercel build --prod",
    "backup:db": "tsx scripts/backup-database.ts",
    "server:status": "ssh root@141.164.60.51 'podman ps -a'",
    "server:storage": "ssh root@141.164.60.51 'df -h /mnt/blockstorage'",
    "podman:up": "podman-compose up -d",
    "podman:down": "podman-compose down",
    "podman:logs": "podman-compose logs -f",
    "monitoring:start": "tsx scripts/monitoring-cron.ts",
    "monitoring:dev": "tsx watch scripts/monitoring-cron.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "load-test": "node scripts/load-test.js",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
