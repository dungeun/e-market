{
  "name": "@newtravel/commerce-plugin",
  "version": "1.0.0",
  "description": "A reusable universal commerce system for building scalable e-commerce platforms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsc && tsc-alias",
    "build:client": "cd client && npm run build",
    "start": "NODE_ENV=production node dist/index.js",
    "preview": "npm run build && npm run start",
    "install:all": "npm install && cd client && npm install",
    "install:client": "cd client && npm install",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest --testPathPattern=tests/smoke",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:production": "jest --testPathPattern=tests/production",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier --check src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:setup": "prisma migrate dev && prisma generate && prisma db seed",
    "prepare": "husky install",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans",
    "docker:build": "docker build -t commerce-plugin .",
    "docker:build:prod": "docker build -f Dockerfile.production -t commerce-plugin:production .",
    "docs:generate": "typedoc --out docs/api src",
    "docs:serve": "typedoc --serve --port 8080 src",
    "generate:openapi": "ts-node scripts/generate-openapi.ts",
    "docs:openapi": "redoc-cli build docs/api/openapi.yaml --output docs/api/openapi.html",
    "docs:build": "npm run docs:generate && npm run generate:openapi && npm run docs:openapi",
    "ci:test": "npm run lint && npm run type-check && npm run test:coverage",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f docker-compose.monitoring.yml logs -f",
    "monitoring:restart": "docker-compose -f docker-compose.monitoring.yml restart"
  },
  "keywords": [
    "commerce",
    "ecommerce",
    "plugin",
    "typescript",
    "nodejs",
    "postgresql",
    "rest-api",
    "microservices"
  ],
  "author": "NewTravel Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.0.2",
    "@prisma/client": "^5.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@vitejs/plugin-react": "^4.5.1",
    "aws-sdk": "^2.1691.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-pino-logger": "^7.0.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.9",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.25.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.7.0",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.2.0",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^4.6.10",
    "response-time": "^2.3.2",
    "sharp": "^0.30.0",
    "socket.io": "^4.7.4",
    "stripe": "^14.8.0",
    "typescript": "^5.3.0",
    "uuid": "^9.0.1",
    "vite": "^6.3.5",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.12.12",
    "@types/response-time": "^2.3.8",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.15.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "redoc-cli": "^0.13.21",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/commerce-base-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/commerce-base-plugin/issues"
  },
  "homepage": "https://github.com/your-org/commerce-base-plugin#readme",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
